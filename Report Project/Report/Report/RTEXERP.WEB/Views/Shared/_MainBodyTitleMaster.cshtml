    <!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
@{
    string mainbodyMasterBtnCssClass = "btn-danger";
    if (ViewData["btnClass"] != null)
    {
        mainbodyMasterBtnCssClass = Convert.ToString(ViewData["btnClass"]);
    }
}
<div class="content-header pt-2 pb-0 pl-1">
    <div class="container-fluid">
        <div class="row mb-0">
            <div class="col-sm-6">
                <h6>
                    <i class="fab fa-wpforms" aria-hidden="true"></i> @ViewData["pageTitle"]
                </h6>
            </div><!-- /.col -->
            <div class="col-sm-6">
                @if (ViewData["btnText"] != null && ViewData["btnLink"] != null)
                {
                    <div style=" float: right;padding: 5px;">
                        <a class="btn btn-xs @mainbodyMasterBtnCssClass" href="@ViewData["btnLink"]">@ViewData["btnText"]</a>
                    </div>
                }
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
