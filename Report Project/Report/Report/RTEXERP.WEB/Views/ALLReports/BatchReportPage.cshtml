                                            {
                                                StrColor = $"#E24C2C";
                                            }
                                            else
                                            {
                                                StrColor = "";
                                            }
                                        }

                                        @*<td style="width:120px;background:@StrColor">@fs.LotNo</td>*@
                                        <td style="width:120px;background:@StrColor"><a href="http://192.173.164.8/erp/MaterialsManagement/Consumables/CostingReports/DyesAndChemicalCostingReport(IRMID).asp?IRMID=@fs.IRMID" target="_blank">@fs.LotNo</a></td>
                                        <td>@fs.ReqDate</td>
