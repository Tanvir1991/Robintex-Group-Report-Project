    var _ProductionCost = '@(String.Format("{0:n2}",(IntProdCost / Model.CurrencyRate)))';
                    ProductionCost.innerHTML = `$ ${_ProductionCost} <br/>(BDT: @(String.Format("{0:n2}",IntProdCost)))`;
