
@model RTEXERP.Contracts.BLModels.MaterialsManagement.MachineProductionRollReportDataPageModel

@{
    Layout = null;
    int sl = 0;
 
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.6">
    <title>Machine Production Roll</title>
    <meta name="theme-color" content="#563d7c">
    <link href="~/AdminLTE-3.1.0-rc/dist/css/adminlte.min.css" rel="stylesheet" />
    <script src="~/AdminLTE-3.1.0-rc/plugins/jquery/jquery.min.js"></script>
    <style>
        table.floatThead-table {
            border-top: none;
            border-bottom: none;
            background-color: #fff;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        table thead {
            text-align: center;
        }

        table {
            table-layout: fixed;
            font-size: calc(11px + (28 - 11) * ((100vw - 300px) / (1600 - 300)));
        }

        td {
            word-wrap: break-word
        }

        table.table-bordered {
            border: 1px solid #000;
            margin-top: 20px;
        }

            table.table-bordered > thead > tr > th {
                border: 1px solid #000;
            }

            table.table-bordered > tbody > tr > td {
                border: 1px solid #000;
            }

            table.table-bordered > tfoot > tr > td {
                border: 1px solid #000;
            }
    </style>
    <!-- Custom styles for this template -->
    <link href="~/css/BatchReportCss.css" rel="stylesheet" />
    <link href="~/css/landscapePrint.css" rel="stylesheet" />
    <link href="~/css/printCommon.css" rel="stylesheet" />
</head>
<body>
    @*<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow no-print noprint">
            <div class="navbar-brand col-sm-12 col-md-12 mr-0">Knitting Production</div>
        </nav>*@

    <div class="container-fluid">
        <div class="col-sm-12 col-md-12 col-lg-12">
            @*<main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4 printArea">*@
            <div class="row">
                <div class="col-md-12" style="text-align:center;">
                    <span class="col-md-12" style="text-align:center;font-weight:bold;">@Model.MachineProductionRoll[0].Companyname</span>
                    <br />
                    <span class="col-md-12" style="text-align:center;font-weight:bold;">Knitting Production</span>
                    <br />
                    <span class="col-md-12" style="text-align:center;font-weight:bold;">Machine No:&nbsp;@Model.MachineProductionRoll[0].MachineNo, Brand: @Model.MachineProductionRoll[0].BRAND, MachineDIA: @Model.MachineProductionRoll[0].MachineDIA </span>
                    <br />
                    <span class="col-md-12" style="text-align:center;font-weight:bold;">@Model.DateDuration</span>
                </div>
            </div>
            <br />
            <div class="row">
              

                <div class="col-md-12 col-xl-12">
                    <table class="table table-striped table-sm table-bordered borderColor mdReport mt-0 pt-0 sticky-header">
                        <thead>
                            <tr class="table-head-fixed text-center">
                                <th width="2%" style="vertical-align:middle">SL</th>
                                <th width="6%" style="vertical-align:middle">Date</th>
                                <th width="6%" style="vertical-align:middle">Buyer</th>
                                <th width="12%" style="vertical-align:middle">Order</th>
                                <th width="7%" style="vertical-align:middle">Fabric Type</th>
                                <th width="7%" style="vertical-align:middle">Fabric Quality</th>
                                <th width="18%" style="vertical-align:middle">Fabric Composition</th>
                                <th width="3%" style="vertical-align:middle">GSM</th>
                                <th width="3%" style="vertical-align:middle">Width</th>
                                <th width="3%" style="vertical-align:middle">Shift</th>
                                <th width="10%" style="vertical-align:middle">Roll No</th>
                                <th width="5%" style="vertical-align:middle">Production Quantity</th>
                                <th width="5%" style="vertical-align:middle">Production Rate (BDT)</th>
                                <th width="5%" style="vertical-align:middle">Production Value (BDT)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="table-thead">
                                <td style="font-weight:bold;" colspan="14">@Model.MachineProductionRoll[0].Companyname In-House Knitting Production</td>
                            </tr>
                            @{
                                sl = 1;
                                foreach (var mcp in Model.MachineProductionRoll)
                                {
                                    var tDate = mcp.TransactionDate.ToString("dd-MMM-yyyy");

                                                        <tr>
                                                            <td width="2%"  class="text-center">@sl</td>
                                                            <td width="6%"  class="text-center">@tDate</td>
                                                            <td width="6%"  class="text-center">@mcp.BuyerName</td>
                                                            <td width="12%"  class="text-center">@mcp.OrderNo</td>
                                                            <td width="7%"  style="text-align:center;">@mcp.FabricType</td>
                                                            <td width="7%"  style="text-align:center;">@mcp.FabricQuality</td>
                                                            <td width="18%"  style="text-align:center;">@mcp.FabricComposition</td>
                                                            <td width="3%"  style="text-align:center;">@mcp.GSM</td>
                                                            <td width="3%"  style="text-align:center;">@mcp.Width</td>
                                                            <td width="3%"  style="text-align:center;">@mcp.ShiftCode</td>
                                                            <td width="10%"  style="text-align:center;">@mcp.RollNo</td>
                                                            <td width="5%"  style="text-align:center;">@mcp.Quantity</td>
                                                            <td width="5%"  style="text-align:center;">@String.Format("{0:n2}", mcp.QuantityValue / mcp.Quantity)</td>
                                                            <td width="5%"  style="text-align:center;">@String.Format("{0:n2}", mcp.QuantityValue)</td>
                                                        </tr>
                                    sl = sl + 1;
                                
                                }
                                <tr class="font-weight-bold note-fontsize-10">
                                    <td class="text-right" colspan="11">@Model.MachineProductionRoll[0].Companyname In-House Knitting Production Total</td>
                                    <td style="text-align:center;">@String.Format("{0:n2}", Model.MachineProductionRoll.Sum(b => b.Quantity))</td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align: center;">@String.Format("{0:n2}", Model.MachineProductionRoll.Sum(b => b.QuantityValue))</td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*</main>*@
    </div>
    <div class="row noprint no-print text-center">
        <div class="col-md-12">
            <input type="button" class="btn btn-danger" value="Print" onClick="window.print()">
        </div>
    </div>
    <script src="~/AdminLTE-3.1.0-rc/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    @*<script src="https:/ /cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https:// stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>*@
    <script src="~/lib/floatThead/floatThead.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $(".sticky-header").floatThead({ scrollingTop: 50 });

        });
    </script>
</body>
</html>
