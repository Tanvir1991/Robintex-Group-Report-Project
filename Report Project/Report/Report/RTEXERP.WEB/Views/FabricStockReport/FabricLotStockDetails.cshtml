@using RTEXERP.Contracts.BLModels.MaterialsManagement.StockModel;
@model RTEXERP.Contracts.Common.RResult<FabricStockReportSPModel>
@{
    ViewData["Title"] = "Fabric Lot Stock Details";
    ViewData["pageTitle"] = "Fabric Lot Stock Details";
    Layout = "~/Views/Shared/_Layout.cshtml";


    bool hasData = Model.modelObjectList != null ? true : false;
    decimal totalRollQty = 0;
    decimal totalFinishFabricQty = 0;
    decimal totalIssueQty = 0;
    decimal totalClosingQty = 0;
}


<div class="row">
    <div class="col-md-12">
        <div class="table-responsive" id="yarn-stock-onDate">
            @if (hasData == true)
            {
                <table class="table table-sm table-bordered table-striped" style="font-size:11px;">
                    <thead>
                        <tr>
                            <th class='txtAlignCenter'>SL</th>
                            <th class='txtAlignCenter'>Lot No</th>
                            <th class='txtAlignCenter'>Roll No</th>
                            <th class='txtAlignCenter'>Unit</th>
                            <th class='txtAlignCenter'>Creation Date</th>
                            <th class='txtAlignCenter'>Roll Qty</th>
                            <th class='txtAlignCenter'>Inspection Date</th>
                            <th class='txtAlignCenter'>Finished Qty</th>
                            <th class='txtAlignCenter'>Issue Date</th>
                            <th class='txtAlignCenter'>Issue Qty</th>
                            <th class='txtAlignCenter'>Closing Qty</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.modelObjectList)
                        {
                            totalRollQty = totalRollQty + item.RollQuantity;
                            totalFinishFabricQty = totalFinishFabricQty + item.FinishFabricQuantity;
                            totalIssueQty = totalIssueQty + item.IssueQuantity;
                            totalClosingQty = totalClosingQty + item.ClosingQuantity;
                        <tr>
                            <td class='txtAlignCenter'>@item.Sl</td>
                            <td class='txtAlignCenter'>@item.LotNo</td>
                            <td class='txtAlignCenter'>@item.RollNo</td>
                            <td class='txtAlignCenter'>@item.Unit</td>
                            <td class='txtAlignCenter'>@item.LotCreationDateMsg</td>
                            <td class='txtAlignCenter'>@item.RollQuantity</td>
                            <td class='txtAlignCenter'>@item.InspectionDateMsg</td>
                            <td class='txtAlignCenter'>@item.FinishFabricQuantity</td>
                            <td class='txtAlignCenter'>@item.IssueDateMsg</td>
                            <td class='txtAlignCenter'>@item.IssueQuantity</td>
                            <td class='txtAlignCenter'>@item.ClosingQuantity</td>
                        </tr>                                 
                                
                            }
                    <tr class="warning">
                        <td colspan="5" class='txtAlignCenter'>Total</td>
                        <td class='txtAlignCenter'>@totalRollQty</td>
                        <td class='txtAlignCenter'></td>
                        <td class='txtAlignCenter'>@totalFinishFabricQty</td>
                        <td class='txtAlignCenter'></td>
                        <td class='txtAlignCenter'>@totalIssueQty</td>
                        
                        <td class='txtAlignCenter'>@totalClosingQty</td>
                    </tr>
                    </tbody>
                </table>
            }
            else
            {
                <h5>No Data found or Found problem</h5>
            }
        </div>
    </div>
</div>





