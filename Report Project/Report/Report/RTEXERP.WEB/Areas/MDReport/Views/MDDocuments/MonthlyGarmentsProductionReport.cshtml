@model RTEXERP.Contracts.BLModels.CMS.GarmentsProductionReportVM

@{
    ViewData["Title"] = "Garments Production";
    ViewData["pageTitle"] = "Garments Production";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<style type="text/css">
    .table-fit {
        width: 1px;
    }
</style>*@

<form id="dd" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="MonthID" class="label-ajt-sm required"></label>
                <select asp-for="MonthID" asp-items="Model.DDLMonthList" class="form-control form-control-sm"></select>
                <span asp-validation-for="MonthID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Year" class="label-ajt-sm required"></label>
                <select asp-for="Year" asp-items="Model.DDLYearList" class="form-control form-control-sm"></select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ReportFor" class="label-ajt-sm required"></label>
                <select asp-for="ReportFor" asp-items="Model.DDLReportFor" class="form-control form-control-sm"></select>
                <span asp-validation-for="ReportFor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box-footer">
                <button type="button" class="btn btn-sm btn-success" id="btnShow">Show</button>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script>

        $(document).ready(function () {

            $("#btnShow").click(function (e) {
                e.preventDefault();

                var MonthID = $("#MonthID").val();
                var Year = $("#Year").val();
                var ReportFor = $("#ReportFor").val();

                var url = `/MDReport/MDDocuments/MonthlyGarmentsProductionReportPage?MonthID=${MonthID}&Year=${Year}&ReportFor=${ReportFor}`;
                window.open(url);
            });
        });

    </script>

}
