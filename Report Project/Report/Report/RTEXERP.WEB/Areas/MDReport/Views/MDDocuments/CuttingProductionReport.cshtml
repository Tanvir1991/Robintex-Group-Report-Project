@model RTEXERP.Contracts.BLModels.MaterialsManagement.CuttingProductionReportViewModel

@{
    ViewData["Title"] = "Cutting Production";
    ViewData["pageTitle"] = "Cutting Production";
    Layout = "~/Views/Shared/_AnonymousReport.cshtml";

}
<script src="~/script/customFunctions/generalizedFunctions.js"></script>
<style type="text/css">
    .table-fit {
        width: 1px;
    }
</style>
<form id="AspNetRolesCreate" method="post">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DateFrom" class="label-ajt-sm required"></label>
                <input type="text" asp-for="DateFrom" class="form-control form-control-sm dateField" autocomplete="off" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DateTo" class="label-ajt-sm required"></label>
                <input type="text" asp-for="DateTo" class="form-control form-control-sm dateField" autocomplete="off" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>

        </div>
        @*<div class="col-md-3">
                <div class="form-group">
                    <label asp-for="CompanyID" class="label-ajt-sm required"></label>
                    <select asp-for="CompanyID" asp-items="Model.DDLCompany" class="form-control form-control-sm"></select>
                    <span asp-validation-for="CompanyID" class="text-danger"></span>
                </div>
            </div>*@
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box-footer">
                <button type="button" class="btn btn-sm btn-success" id="btnShow">Show</button>
            </div>
        </div>
    </div>
</form>






@section scripts{
    <script>
        $(document).ready(function () {

            $("#btnShow").click(function (e) {
                e.preventDefault();
              var DateFrom = $("#DateFrom").val();
              var DateTo = $("#DateTo").val();
              //var CompanyId = $("#CompanyID").val();

                if (!DateFrom) {
                    DateFrom = @DateTime.Now.ToShortDateString();
                }
               if (!DateTo) {
                DateTo = @DateTime.Now.ToShortDateString();
                }
                var url = `/MDReport/MDDocuments/CuttingProductionReportPage?DateFrom=${DateFrom}&DateTo=${DateTo}`

                window.open(url);


            });
        })





    </script>

}