            </div>

            <br />

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive-sm table-responsive-lg">
                        <table class="table table-striped table-sm mt-0 pt-0  table-bordered mdReport borderColor">
                            <thead style="font-size:13px;vertical-align:middle">
                                <tr class="table-thead">
                                    <th style="vertical-align:middle; width:5%">SL</th>
                                    <th style="vertical-align:middle; width:10%">Date</th>
                                    <th style="vertical-align:middle; width:10%">Production Pcs</th>
                                    <th style="vertical-align:middle; width:15%">Total Earning</th>
                                    <th style="vertical-align:middle; width:15%">Production Cost</th>
                                    <th style="vertical-align:middle; width:15%">Salary</th>
                                    <th style="vertical-align:middle; width:15%">Total Cost</th>
                                    <th style="vertical-align:middle; width:15%">Gross Profit</th>
                                </tr>
                            </thead>
                            <tbody class="table-body">

                                @{
                                    var bgColor = "";
                                    foreach (var aop in Model)
                                    {
                                        sl = sl + 1;

                                        var profitLoss = (aop.TotalProfitBDT - (double)aop.OvalPerDayTotalSalary);
                                        if (profitLoss > 0)
                                        {
                                            bgColor = "text-light bg-success";
                                        }
                                        else if (profitLoss == 0)
                                        {
                                            bgColor = "bg-secondary";
                                        }
                                        else
                                        {
                                            bgColor = "text-light bg-danger";
                                        }


                                        <tr>
                                            <td class="text-center">@sl</td>
                                            <td class="text-center">@aop.ReportDate.ToString("dd-MMM-yyyy")</td>
                                            <td class="table-body text-center">@String.Format("{0:n2}", aop.TotalProductionQty)<span> Pcs </span></td>
                                            <td class="table-body text-center">@String.Format("{0:n2}", aop.TotalPriceBDT)</td>
                                            <td class="table-body text-center">@String.Format("{0:n2}", aop.TotalCostBDT)</td>
                                            <td class="table-body text-center">@String.Format("{0:n2}", aop.OvalPerDayTotalSalary)</td>
                                            <td class="table-body text-center">@String.Format("{0:n2}", (aop.TotalCostBDT + (double)aop.OvalPerDayTotalSalary))</td>
                                            <td class="table-body text-center @bgColor">@String.Format("{0:n2}", (aop.TotalProfitBDT - (double)aop.OvalPerDayTotalSalary))</td>
                                        </tr>

                                    }
                                }
                                <tr class="table-thead" style="font-weight:bold">

                                    <td class="text-right" colspan="2">Total</td>

                                    <td class="text-center">@String.Format("{0:n0}", Model.Sum(x => x.TotalProductionQty))<span> Pcs </span></td>
                                    <td class="text-center">@String.Format("{0:n2}", Model.Sum(x => x.TotalPriceBDT))</td>
                                    <td class="text-center">@String.Format("{0:n2}", Model.Sum(x => x.TotalCostBDT))</td>
                                    <td class="text-center">@String.Format("{0:n2}", Model.Sum(x => x.OvalPerDayTotalSalary))</td>
                                    <td class="text-center ">@String.Format("{0:n2}", (Model.Sum(x => x.TotalCostBDT) + (double)Model.Sum(x => x.OvalPerDayTotalSalary)))</td>
                                    <td class="text-center ">@String.Format("{0:n2}", (Model.Sum(x => x.TotalProfitBDT) - (double)Model.Sum(x => x.OvalPerDayTotalSalary)))</td>
                                </tr>
                            </tbody>
                            <tfoot>

                            </tfoot>
                        </table>
