                                        <td style="text-align:right; font-size:10px;">@String.Format("{0:n2}", SubContractDataList.Sum(b => b.ShiftA))</td>
                                        <td style="text-align:right; font-size:10px;">@String.Format("{0:n2}", SubContractDataList.Sum(b => b.ShiftA))</td>
