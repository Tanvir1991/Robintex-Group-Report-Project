                                    <td style="text-align:right;">@String.Format("{0:n2}", inHouseComptex.Sum(b => b.TotalQuantity))</td>
                                    <td></td>
                                    <td style="text-align:right;">@String.Format("{0:n2}", inHouseComptex.Sum(b => b.QuantityValue))</td>
