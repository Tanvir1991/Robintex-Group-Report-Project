@model RTEXERP.Contracts.BLModels.Maxco.ViewModel.IE_OrderEfficiencyViewModel

@{
    ViewData["Title"] = "Order Efficiency";
    ViewData["pageTitle"] = "Order Efficiency";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["btnText"] = "Go To List";
    ViewData["btnLink"] = "/Maxco/IEOrderEfficiency/Index";
}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

<form asp-controller="IEOrderEfficiency" id="frmOrderEfficiency" asp-action="CreateIEOrderEfficiency">

    <div class="row">
        <input type="hidden" asp-for="ID" />
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="BuyerID"></label>
                <select class="form-control form-control-sm" required asp-for="BuyerID" asp-items="Model.BuyerList"></select>
                <span asp-validation-for="BuyerID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="OrderID"></label>
                <select class="form-control form-control-sm" required asp-for="OrderID" asp-items="Model.OrderList"></select>
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="StyleID"></label>
                <select class="form-control form-control-sm" required asp-for="StyleID" asp-items="Model.StyleList"></select>
                <span asp-validation-for="StyleID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="PantoneNo"></label>
                <select class="form-control form-control-sm" required asp-for="PantoneNo" asp-items="Model.StyleList"></select>
                <span asp-validation-for="PantoneNo" class="text-danger"></span>
            </div>
        </div>


    </div>
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="LineID"></label>
                <select class="form-control form-control-sm" required asp-for="LineID" asp-items="Model.DDLProductionLine"></select>
                <span asp-validation-for="LineID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-1 col-md-2 col-lg-2">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="LineManpower"></label>
                <input asp-for="LineManpower" type="number" class="form-control form-control-sm " placeholder="Manpower" autocomplete="off" />
                <span asp-validation-for="OrderSMV" class="text-danger"></span>
            </div>
        </div>
        @*<div class="col-sm-2 col-md-2 col-lg-2">
                <div class="form-group">
                    <label class="label-ajt-sm required" asp-for="WorkingHour"></label>
                    <input asp-for="WorkingHour" type="number" class="form-control form-control-sm" placeholder="Working Hour" autocomplete="off" />
                    <span asp-validation-for="WorkingHour" class="text-danger"></span>
                </div>
            </div>*@
        <div class="col-sm-2 col-md-2 col-lg-2">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="OrderSMV"></label>
                <input asp-for="OrderSMV" type="number" class="form-control form-control-sm " placeholder="Order SMV" autocomplete="off" />
                <span asp-validation-for="OrderSMV" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="HourlyTargetProduction"></label>
                <input type="number" asp-for="HourlyTargetProduction" class="form-control form-control-sm " placeholder="Hourly Target Production" autocomplete="off" />
                <span asp-validation-for="HourlyTargetProduction" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-md-3 col-lg-2">
            <div class="form-group">
                <label class="label-ajt-sm required" asp-for="TargetEffiency"></label>
                <input type="number" asp-for="TargetEffiency" class="form-control form-control-sm " placeholder="Target Effiency" autocomplete="off" />
                <span asp-validation-for="TargetEffiency" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="form-group">
                <label class="label-ajt-sm" asp-for="ReportDate"></label>
                <input asp-for="ReportDate" type="text" class="form-control form-control-sm dateField" value="@Model.ReportDateSTR" autocomplete="off" />
            </div>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
                <label class="label-ajt-sm" asp-for="Remarks"></label>
                <input asp-for="Remarks" type="text" class="form-control form-control-sm " placeholder="Remarks" autocomplete="off" />
            </div>
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label>
            <div class="form-group">
                <input type="button" class="btn btn-sm btn-success" value="Save" id="btnSave" />
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script type="text/javascript">
        $(function () {
       // $("#BuyerID").chosen();
       // $("#OrderID").chosen();
        $('#OrderID').select2();
        $("#BuyerID").change(function () {
            var buyerID = $("#BuyerID").val();
            /*
            var dropDownOption = GenerateDropDownOptions('CommonDropDown', 'DDLBuyerWiseOrder', { "BuyerID": buyerID,"DateFrom":'DateTime.Now.AddYears(-1)' }, "");
            $("#OrderID").html(dropDownOption);
            */
            DropDownSelect2('GET', '/CommonDropDown/DDLBuyerWiseOrder', { BuyerID: buyerID,DateFrom: '@DateTime.Now.AddYears(-5).Date.ToShortDateString()'}, 'OrderID', false);

            //$("#OrderID").trigger('change');
        });
        $("#OrderID").change(function () {
            var orderID = $("#OrderID").val();
            if (orderID) {
                var dropDownOption = GenerateDropDownOptions('Maxco/IEOrderEfficiency', 'DDLGetOrderWiseStyle', { "orderID": orderID }, "");
                $("#StyleID").html(dropDownOption);
            }
            $("#StyleID").trigger('change');
        });
        if ('@Model.ID'>0) {
            $("#btnSave").val('Update');
            $("#BuyerID").val("@Model.BuyerID").trigger("change");
            var newOption = new Option('@Model.OrderNo', '@Model.OrderID', false, false);
            $('#OrderID').append(newOption).trigger('change');
            $("#StyleID").val('@Model.StyleID');
        }
        $("#StyleID").change(function () {
            var styleID = $("#StyleID").val();
            if (styleID) {
                var dropDownOption = GenerateDropDownOptions('Maxco/IEOrderEfficiency', 'DDLGetStyleWisePantonList', { "styleID": styleID }, "");
                $("#PantoneNo").html(dropDownOption);
            }
            $("#PantoneNo").trigger('change');
        });
            $("#btnSave").click(function () {
                debugger

                var isValid = $("#frmOrderEfficiency").validate();

                //
                let id = RtnNumber($("#ID").val());
                let orderID = RtnNumber($("#OrderID").val());
                let styleID = RtnNumber($("#StyleID").val());
                let lineID = RtnNumber($("#LineID").val());
                let pantoneNo = $("#PantoneNo").val();
                let ReportDate = $("#ReportDate").val();
                if (!ReportDate) {
                    ReportDate = '@DateTime.Now.ToShortDateString()';
                }
                let orderSMV = RtnFloatUpToPrecision($("#OrderSMV").val(), 2)
                let hourlyTargetProduction = RtnFloatUpToPrecision($("#HourlyTargetProduction").val(), 2)
                let targetEffiency = RtnFloatUpToPrecision($("#TargetEffiency").val(), 2)
                let LineManpower = RtnNumber($("#LineManpower").val())
                // let WorkingHour = RtnFloatUpToPrecision($("#WorkingHour").val(), 2)
                let remarks = $("#Remarks").val();



                debugger;
                if (orderID > 0) {
                    if (styleID > 0) {
                        if (LineManpower) {
                            if (orderSMV > 0 && hourlyTargetProduction > 0 && targetEffiency > 0) {
                                var orderEfficient = {
                                    ID: id,
                                    ReportDate: ReportDate,
                                    OrderID: orderID,
                                    StyleID: styleID,
                                    LineID: lineID,
                                    PantoneNo: pantoneNo,
                                    HourlyTargetProduction: hourlyTargetProduction,
                                    OrderSMV: orderSMV,
                                    TargetEffiency: targetEffiency,
                                    LineManpower: LineManpower,
                                    //  WorkingHour: WorkingHour,
                                    Remarks: remarks
                                }
                                $.ajax({
                                    type: 'POST',
                                    url: '/Maxco/IEOrderEfficiency/CreateIEOrderEfficiency',
                                    data: { iEorderEfficient: orderEfficient },
                                    dataType: 'json',
                                    async: false,
                                    success: function (data) {
                                        if (data.result == 1) {
                                            //$.alert.open('Success', data.message);


                                            $.alert.open('success', data.message, function (button) {
                                                if (button == 'ok') {
                                                    if (data.statusCode > 0) {

                                                        window.location.href = "/Maxco/IEOrderEfficiency/Index";
                                                    }
                                                }
                                            });

                                            Clear();


                                        } else {
                                            $.alert.open('error', data.message);
                                        }
                                    },
                                    error: function (request, status, error) {
                                        alert(request.statusText + "/" + request.statusText + "/" + error);
                                    }
                                });


                            } else {
                                $.alert.open("error", "Input Field is Required");
                                return false;
                            }

                        } else {
                            $.alert.open("error", "Manpower is Required");
                            return false;
                        }
                    } else {
                        $.alert.open("error", "Style is Required");
                        return false;
                    }
                } else {
                    $.alert.open("error", "Order is Required");
                    return false;
                }
            });

    })

    function Clear() {
        $("#ID").val('');
        $("#BuyerID").val('');
        $("#BuyerID").val('').trigger("change");
        $("#ReportDate").val('');
        $("#OrderID").val('');
        $("#StyleID").val('');
        $("#Manpower").val('');
       // $("#WorkingHour").val('');
        $("#PantoneNo").val('');
        $("#OrderSMV").val(0);
        $("#HourlyTargetProduction").val(0);
        $("#TargetEffiency").val(0);
        $("#Remarks").val('');
        $("#LineID").val(6);
    }

    function ValidObject() {

        if (orderID > 0) {
            if (styleID > 0) {
                if (pantoneNo != "") {
                    if (orderSMV > 0 && hourlyTargetProduction > 0 && targetEffiency > 0) {
                        var orderEfficient = {
                            ID: 0,
                            OrderID: orderID,
                            StyleID: styleID,
                            PantoneNo: pantoneNo,
                            HourlyTargetProduction: hourlyTargetProduction,
                            OrderSMV: orderSMV,
                            TargetEffiency: targetEffiency,
                            Remarks: remarks
                        }
                        return orderEfficient;

                    } else {
                        $.alert.open("error", "Input Field is Required");
                        return false;
                    }

                } else {
                    $.alert.open("error", "PantoneNo is Required");
                    return false;
                }
            } else {
                $.alert.open("error", "Style is Required");
                return false;
            }
        } else {
            $.alert.open("error", "Order is Required");
            return false;
        }
    }

    function validField() {

    }
    </script>
}